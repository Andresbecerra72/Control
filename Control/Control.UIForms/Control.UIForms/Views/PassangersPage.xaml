<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Control.UIForms.Views.PassangersPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Reporte Conteo Pasajeros">    <!--este es el vinculo que gobierna toda la pagina desde MainViewModel -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_add" Command="{Binding AddPassangerCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <!--el siguiente  binding es una instancia de la MainViewModel -->
        <StackLayout
            BindingContext="{Binding Passangers}"
            Padding="8">
            <ListView
                IsRefreshing="{Binding IsRefreshing}"
                HasUnevenRows="True"
                ItemsSource="{Binding Passangers}"> <!--este binding es una instancia de la PassangerViewModel -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectPassangerCommand}"/>
                                </Grid.GestureRecognizers>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackLayout
                                	Grid.Column="0"
                                	VerticalOptions="Center">
                                    <Label
                                    	FontAttributes="Italic"
                                    	FontSize="Medium"
                                    	Text="{Binding PublishOn, StringFormat='{0:MM/dd/yyyy a\\t h:mm tt}'}"
                                    	TextColor="Olive">
                                    </Label>
                                    <Label
                                    	FontAttributes="Bold"
                                    	FontSize="Small"
                                    	Text="{Binding Flight,StringFormat='Vuelo: {0}'}"
                                    	TextColor="Black">
                                    </Label>
                                    <Label
                                    	Text="{Binding Total, StringFormat='Total: {0}'}"
                                    	TextColor="Navy">
                                    </Label>
                                </StackLayout>
                                <Image
                                	Grid.Column="2"
                                	Source="ic_more">
                                </Image>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
