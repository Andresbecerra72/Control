<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Control.UIForms.Views.PassangersPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Reporte Conteo Pasajeros">    <!--este es el vinculo que gobierna toda la pagina desde MainViewModel -->
    <ContentPage.Content>
        <!--el siguiente  binding es una instancia de la MainViewModel -->
        <StackLayout
            BindingContext="{Binding Passagers}"
            Padding="8">
            <ListView
                HasUnevenRows="True"
                ItemsSource="{Binding Passangers}"> <!--este binding es una instancia de la PassangerViewModel -->



            </ListView>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>