@model Control.Web.Models.PassangerViewModel

@{
    ViewData["Title"] = "Edit";
}
    <br />
<h4>Editar Reporte</h4>

<h6>Datos del Vuelo</h6>
<hr />
<div class="form-group">
    <label asp-for="PublishOn" class="control-label"></label>
    <input type="date" asp-for="PublishOn" class="text-center" disabled/> 

</div>
<div class="row">
    <div class="col-lg-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
        <form asp-action="Edit" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />
            @if (User.Identity.Name != "andres.becerra@satena.com" && User.Identity.Name != "administrador.kiu@satena.com")
            {
                <input type="hidden" asp-for="PublishOn" />
            }
                <input type="hidden" asp-for="Day" />
                <input type="hidden" asp-for="Month" />
                <input type="hidden" asp-for="Year" />

                <div class="form-group">
                    <label asp-for="Flight" class="control-label"></label>
                    <input asp-for="Flight" class="form-control" />
                    <span asp-validation-for="Flight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adult" class="control-label"></label>
                    <input asp-for="Adult" class="form-control" />
                    <span asp-validation-for="Adult" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Child" class="control-label"></label>
                    <input asp-for="Child" class="form-control" />
                    <span asp-validation-for="Child" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Infant" class="control-label"></label>
                    <input asp-for="Infant" class="form-control" />
                    <span asp-validation-for="Infant" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Total" class="control-label"></label>
                    <input asp-for="Total" class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>

                @if (User.Identity.Name == "andres.becerra@satena.com" || User.Identity.Name == "administrador.kiu@satena.com")
                {
                    <div class="form-group">
                        <label asp-for="PublishOn" class="control-label"></label>
                        <div class="input-group date">                           
                                <input asp-for="PublishOn" type="date" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <span asp-validation-for="PublishOn" class="text-danger"></span>
                        </div>
                }


                <div class="form-group">
                    <label asp-for="Remark" class="control-label"></label>
                    <input asp-for="Remark" class="form-control" />
                    <span asp-validation-for="Remark" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary mr-2"><i class="fa fa-save"></i> Save</button>
                    <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to List</a>
                </div>
            </form>
    </div>
    <div class="col-lg-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 mt-3 text-center">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" onerror="this.onerror=null; this.src='/images/no-img.jpg'" alt="Image" style="width:600px;height:850px;max-width: 100%; height: auto;" />
        }
        else
        {
            <img src="~/images/no-img.jpg" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
        }
    </div>
</div>

