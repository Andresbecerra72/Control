@model IEnumerable<Control.Web.Data.Entities.KiuPassanger>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />
<section>

    <div>
        <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus-circle"></i> Add Kiu Report</a>
        <a asp-action="Delete" class="btn btn-danger"><i class="fa fa-trash"></i> Delete All Data</a>

    </div>
</section>
<br />
<section>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Reporte Archivo KIU</h3>
                </div>
                <div class="panel-body mx-auto">
                    <table class="table table-hover table-responsive table-striped" id="ProductsTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PublishOn)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Flight)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Adult)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Child)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Infant)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Total)
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PublishOn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Flight)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Adult)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Child)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Infant)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total)
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
    	$(document).ready(function () {
        	$('#ProductsTable').DataTable();
    	});
    </script>
}
