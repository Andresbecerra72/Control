@model IEnumerable<Control.Web.Data.Entities.KiuPassanger>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />
<div>
    <a asp-action="Create" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Add Kiu Report</a>
    <a asp-action="Delete" class="btn btn-danger"><i class="fa fa-trash"></i> Delete All Data</a>

</div>

<br />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Reporte Archivo KIU</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="ProductsTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.PublishOnKIU)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vuelo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalAdult)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalChild)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalInfant)
                            </th>
                            <th>
                            @Html.DisplayNameFor(model => model.TotalPax)
                            </th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PublishOnKIU)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vuelo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalAdult)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalChild)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalInfant)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalPax)
                                </td>
                            
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
    	$(document).ready(function () {
        	$('#ProductsTable').DataTable();
    	});
    </script>
}
